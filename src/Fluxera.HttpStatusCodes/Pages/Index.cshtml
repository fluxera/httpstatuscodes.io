@page
@model Fluxera.HttpStatusCodes.Pages.IndexModel
@{
    ViewData["Title"] = this.Model.PageContent.Title;
	ViewData["Description"] = "HTTP Status Code directory, with definitions, details and helpful code references.";
}

<div class="hero introduction">
	<div class="container">
		<div class="row">
			<div class="twelve columns">
				<markdown markdown="@(this.Model.PageContent.Markdown)" />
			</div>
		</div>
	</div>
</div>
<div class="share">
	<div class="container">
		<div class="row">
			<div class="twelve columns">
				<a href="https://twitter.com/intent/tweet?hashtags=httpstatuscodes&amp;text=Helpful%20HTTP%20Status%20Code%20reference%20site&amp;url=https%3A%2F%2Fhttpstatuscodes.io" class="twitter"><i class="fa-brands fa-twitter"></i> Share on Twitter</a>
				<a href="https://github.com/fluxera/httpstatuscodes.io" class="github"><i class="fa-brands fa-github"></i> Star on GitHub</a>
				<a href="https://www.fluxera.com" target="_blank" class="heart">Made with <i class="fa-solid fa-heart" style="color:#d6156d"></i> in Bremen</a>
			</div>
		</div>
	</div>
</div>
<div class="codes">
	<div class="container">
		<div class="row">
			<div class="twelve columns">
				@foreach((int set, StatusCodeClass statusCodeClass) in this.Model.StatusCodeClasses)
				{
					<ul>
						<li>
							<h2>@Html.Raw(HttpUtility.HtmlDecode(statusCodeClass.Title))</h2>
						</li>
						@foreach(StatusCodePageContent statusCodePageContent in this.Model.StatusPageContents.Where(x => x.Set == set && !x.IsUnlisted))
						{
							<li><a href="/@(statusCodePageContent.Code)"><span>@(statusCodePageContent.Code)</span> @(statusCodePageContent.Title)</a></li>
						}
					</ul>
				}
			</div>
		</div>
	</div>
</div>